  "name": "Post-Purchase Referral",
  "target": "section",
  "settings": [
    {
      "type": "select",
      "id": "trigger_timing",
      "label": "Popup Trigger",
      "default": "delayed",
      "options": [
        {"value": "immediate", "label": "Immediate (1 second delay)"},
        {"value": "delayed", "label": "Delayed (custom timing)"},
        {"value": "on_scroll", "label": "On Page Scroll"},
        {"value": "exit_intent", "label": "Exit Intent"}
