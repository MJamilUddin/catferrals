  "name": "Referral Widget",
  "target": "section",
  "settings": [
    {
      "type": "select",
      "id": "widget_style",
      "label": "Widget Style",
      "default": "modern",
      "options": [
        {"value": "modern", "label": "Modern (Full-featured card)"},
        {"value": "minimal", "label": "Minimal (Compact layout)"},
        {"value": "inline", "label": "Inline (Text link only)"}
      ]
    },
    {
      "type": "header",
      "content": "Incentive Settings"
    },
    {
      "type": "text",
      "id": "referrer_reward",
      "label": "Referrer Reward",
      "default": "10%",
      "info": "What the person sharing gets"
    },
    {
      "type": "text",
      "id": "referee_reward", 
      "label": "Referee Reward",
      "default": "10%",
      "info": "What the new customer gets"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#667eea"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#28a745"
    }
  ]
}
{% endschema %}
