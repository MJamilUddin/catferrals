      "default": "Check out this amazing store!"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color", 
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color", 
      "default": "#007ace"
    },
    {
      "type": "text",
      "id": "max_width",
      "label": "Max Width",
      "default": "400px"
    },
    {
      "type": "text", 
      "id": "margin",
      "label": "Margin",
      "default": "0 auto"
    },
    {
      "type": "text",
      "id": "padding", 
      "label": "Padding",
      "default": "20px"
    }
  ]
}
{% endschema %} 