  "name": "Referral Social Share",
  "target": "body",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Share & Earn"
    },
    {
      "type": "text",
      "id": "description", 
      "label": "Description",
